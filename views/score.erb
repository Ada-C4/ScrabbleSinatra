  <% if @score.nil? %>
    <% @label = "Please enter a word to score:" %>

  <% else %>
    <p>
      
      The score of <strong><%= @word %></strong> is <strong><%= @score %></strong>
    </p>
    <p>
      <% @label = "Score another word:" %>
    </p>
  <% end %>

  <form action="#" method="post">
    <label for="word"><%= @label %></label><br>
    <input type="text" id="word" name="word">
    <br>
    <br>
    <input type="submit" name="submit" id="submit" value="Submit Word">
  </form>
