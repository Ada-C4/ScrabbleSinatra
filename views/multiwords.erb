<h1>Score a word!</h1>
<div id="scoreword">
  <form id="score-form" action="" method="post">
    <fieldset>

      <p>
        <label for="word">Please enter a list of words, seperated by commas:</label>
        <input type="text" name="word" id="word">
        <p>
          <%@input_array.each do |word|%>
            <%=word%> equals <%=Scrabble::Scrabble.word_score(word)%>
          <br>
          <%end%>
         </p>
      </p>
      <br>
      <input type="submit" name="submit" id="submit" value="Get Score">
    </fieldset>
  </form>
</div>
